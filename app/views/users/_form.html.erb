    <%= form.label :password, class: "col-sm-4 control-label"  %>
    <%= form.text_field :password, class: "form-control col-sm-4" %>
  </div>
  
  <div class="form-group">
    <%= form.label :password_confirmation, class: "col-sm-4 control-label"  %>
